cljtags() {
  find . \! -name '.*' -name '*.clj' | xargs etags --regex='/[ \t\(]*def[a-z]* \([a-z-!]+\)/\1/' --regex='/[ \t\(]*ns \([a-z.]+\)/\1/'    
}

storm-post() {
  mv ~/local/svn/storm/conf/defaults.yaml{,.bak}
  mv ~/local/svn/storm/conf/storm.yaml{.bak,}
}

storm-pre() {
  mv ~/local/svn/storm/conf/defaults.yaml{.bak,}
  mv ~/local/svn/storm/conf/storm.yaml{,.bak}
}

storm-pre-jar() {
  storm-pre
  cd ~/local/svn/storm
  lein jar
}

storm-all() {
    storm-pre-jar && storm-post
}

clean-storm-zk() {
    rm -rf /tmp/zookeeper/*
    rm -rf /mnt/storm/*
}

start-nimbus() {
    /home/james/local/svn/storm/bin/storm nimbus
}

start-supervisor() {
    /home/james/local/svn/storm/bin/storm supervisor    
}


start-ui() {
    /home/james/local/svn/storm/bin/storm ui
}